<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:windowManager="clr-namespace:Iciclecreek.Avalonia.WindowManager;assembly=Iciclecreek.Avalonia.WindowManager"
                    x:CompileBindings="True">
  <ControlTheme x:Key="{x:Type DragPreviewWindow}" TargetType="DragPreviewWindow"
                BasedOn="{StaticResource {x:Type windowManager:ManagedWindow}}">
    <Setter Property="SystemDecorations" Value="None" />
    <Setter Property="CanResize" Value="False" />
    <Setter Property="ShowActivated" Value="False" />
    <Setter Property="Background" Value="{x:Null}" />
    <Setter Property="SizeToContent" Value="WidthAndHeight" />
    <Setter Property="Topmost" Value="True" />
    <Setter Property="IsHitTestVisible" Value="False" />
  </ControlTheme>
</ResourceDictionary>
